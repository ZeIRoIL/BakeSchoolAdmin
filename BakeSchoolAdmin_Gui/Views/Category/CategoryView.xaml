<UserControl x:Class="BakeSchoolAdmin_Gui.View.CategoryView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:bakeschooladmin_models="clr-namespace:BakeSchoolAdmin_Models;assembly=BakeSchoolAdmin_Models" 
             xmlns:viewmodels="clr-namespace:BakeSchoolAdmin_Gui.ViewModels" 
             xmlns:category="clr-namespace:BakeSchoolAdmin_Models.Modals.Category;assembly=BakeSchoolAdmin_Models" 
             d:DataContext="{d:DesignInstance Type=viewmodels:CategoryMainViewModel}"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="28*"/>
            <RowDefinition Height="48*"/>
            <RowDefinition Height="339*"/>
            <RowDefinition Height="35*"/>
        </Grid.RowDefinitions>

        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Grid.Row="0">
            <Button Content="Startseite" />
        </StackPanel>

        <Label Content="Bereiche" HorizontalAlignment="Center" FontSize="30" VerticalAlignment="Center" Grid.Row="1" Height="46" Margin="338,2,338,0" Width="124"/>

        <Grid Grid.Row="2" Margin="0,10,0,25" Grid.RowSpan="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0">
                <ItemsControl ItemsSource="{Binding Categories}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <StackPanel >
                                <TextBox Text="{Binding Details.Text, Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"  Background="Red"/>
                            </StackPanel>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>
